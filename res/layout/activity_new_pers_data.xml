<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ClientActivity" >

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:orientation="vertical" >

        <EditText
                android:id="@+id/etActualMdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/mdpActual"
                android:inputType="textPassword">
                
                <requestFocus />
                </EditText> 
        
            <EditText
                android:id="@+id/etMdp"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/mdpNew"
                android:inputType="textPassword" />
            
            <EditText
                android:id="@+id/etMdpConf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/mdpNewConfirmation"
                android:inputType="textPassword" />
            <EditText
                android:id="@+id/etNewName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/nameNew"
                android:ems="10" />
            <EditText
                android:id="@+id/etNewPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/phoneNew"
                android:ems="10"
                android:inputType="phone" />
            <EditText
                android:id="@+id/etNewMail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/mailNew"
                android:inputType="textEmailAddress" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="279dp"
        android:layout_height="58dp"
        android:layout_alignLeft="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginTop="38dp"
        android:text="@string/options" />

    <Button
        android:id="@+id/changeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="@string/changeButton" />

    <TextView
        android:id="@+id/missingField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/changeButton"
        android:layout_marginBottom="24dp"
        android:text="@string/acceptation" />

</RelativeLayout>