<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RestaurantActivity" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <LinearLayout
                android:id="@+id/listImgRest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <!-- Ajout des images -->

            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="1" >

            <Button
                android:id="@+id/menuInRest"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.33"
                android:text="@string/menuButton" />

            <Button
                android:id="@+id/commandeInRest"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.33"
                android:text="@string/commandButton" />

            <Button
                android:id="@+id/reserveInRest"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.33"
                android:text="@string/reservButton" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/descriptionRest"
                android:layout_width="match_parent"
                android:layout_height="52sp"
                android:layout_weight="1"
                android:ems="10"
                android:text="@string/descstring" />

            <ImageView
                android:id="@+id/imageViewDesc"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@android:drawable/arrow_down_float" />
        </LinearLayout>

        <RatingBar
            android:id="@+id/ratingRest"
            style="?android:attr/ratingBarStyleIndicator"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:isIndicator="false"
            android:numStars="5"
            android:rating="0.0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="0.33"
                android:layout_gravity="center|center_vertical|center_horizontal"
                android:src="@drawable/adress" />

            <TextView
                android:id="@+id/localisationRest"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.66"
                android:layout_gravity="center|center_vertical|center_horizontal"
                android:text="@string/locstring" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_gravity="center|center_vertical|center_horizontal"
                android:layout_weight="0.33"
                android:src="@android:drawable/ic_menu_call" />

            <TextView
                android:id="@+id/tvTelRest"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_vertical|center_horizontal"
                android:layout_weight="0.66"
                android:text="@string/unknownTel" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_gravity="center|center_vertical|center_horizontal"
                android:layout_weight="0.33"
                android:src="@android:drawable/sym_action_email" />

            <TextView
                android:id="@+id/tvMailRest"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_vertical|center_horizontal"
                android:layout_weight="0.66"
                android:text="@string/unknownMail" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_gravity="center|center_vertical|center_horizontal"
                android:layout_weight="0.33"
                android:src="@drawable/web" />

            <TextView
                android:id="@+id/tvWebRest"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.66"
                android:layout_gravity="center|center_vertical|center_horizontal"
                android:text="@string/unknownWeb" />
        </LinearLayout>

        <TextView
            android:id="@+id/horaireRest"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:text="@string/timetableUnknown" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center|center_vertical|center_horizontal"
                android:text="@string/catPrice" />

            <TextView
                android:id="@+id/tvPriceCat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center|center_vertical|center_horizontal"
                android:text="@string/unkown" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center|center_vertical|center_horizontal"
                android:text="@string/restPlace" />

            <TextView
                android:id="@+id/tvPlaceRest"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center|center_vertical|center_horizontal"
                android:text="@string/unkown" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>