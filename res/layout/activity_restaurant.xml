<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RestaurantActivity" >
    
    <LinearLayout
  	    android:layout_width="match_parent"
  	    android:layout_height="wrap_content"
  	    android:orientation="vertical" >

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/listImgRest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <!-- Ajout des images -->

            </LinearLayout>
        </HorizontalScrollView>

        <RatingBar
            android:id="@+id/ratingRest"
            style="?android:attr/ratingBarStyleIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:isIndicator="false"
            android:numStars="5"
            android:rating="0.0" />

    	<TextView
        	android:id="@+id/descriptionRest"
        	android:layout_width="wrap_content"
        	android:layout_height="52sp"
        	android:layout_gravity="center_horizontal"
        	android:text="@string/descstring" />

    	<TextView
    	    android:id="@+id/horaireRest"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_gravity="center_horizontal"
    	    android:text="@string/timetableUnknown" />

    	<TextView
    	    android:id="@+id/localisationRest"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_gravity="center_horizontal"
    	    android:text="@string/descstring" />

    	<LinearLayout
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content"
    	    android:layout_gravity="center_horizontal" >

    	    <Button
    	        android:id="@+id/commandeInRest"
    	        android:layout_width="wrap_content"
    	        android:layout_height="wrap_content"
    	        android:layout_gravity="center_horizontal"
    	        android:text="@string/commandButton" />

    	    <Button
    	        android:id="@+id/reserveInRest"
    	        android:layout_width="wrap_content"
    	        android:layout_height="wrap_content"
    	        android:layout_gravity="center_horizontal"
    	        android:text="@string/reservButton" />

    	    <Button
    	        android:id="@+id/menuInRest"
    	        android:layout_width="wrap_content"
    	        android:layout_height="wrap_content"
    	        android:layout_gravity="center_horizontal"
    	        android:text="@string/menuButton" />
    	</LinearLayout>

    </LinearLayout>

</ScrollView>